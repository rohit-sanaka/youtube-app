{
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },

  "extends": [
    "react-app",
    "react-app/jest",
    "prettier",
    "eslint:recommended",

    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended"
  ],

  "rules": {
    "react/prop-types": 0,
    "indent": ["warn", 2],
    "no-unused-vars": "warn",
    "linebreak-style": 1,
    "quotes": ["warn", "single"]
  }
}
